			<param name="regexp" value="\d"/>
		</event-driver>
		<canonicizers>
		</canonicizers>
		<cullers>
		</cullers>
		<norm value="CHARS_IN_DOC"/>
		<factor value="1.0"/>
	</feature>
	<feature name="digit bigrams" calc_hist="true">
